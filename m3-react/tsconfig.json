{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@/*": ["./src/*"],
      "~types/*": ["./types/*"]
    },
    "resolveJsonModule": true,
    "target": "ES2017",
    "types": ["vitest/globals"]
  },
  "include": [
    "shims-*.d.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "storybook/**/*.ts",
    "storybook/**/*.tsx",
    "tests/**/*.tsx"
  ]
}